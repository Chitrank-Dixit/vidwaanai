FROM python:3.11-slim AS base

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy project files
COPY pyproject.toml .
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir mcp anthropic langdetect pytest pytest-asyncio

# Copy source code
COPY src/ /app/src/
COPY tests/ /app/tests/

# Set python path
ENV PYTHONPATH=/app


# ============================================================================
# TEST STAGE: For running tests in CI
# ============================================================================
FROM base AS test

# Install additional test dependencies
RUN pip install --no-cache-dir \
    pytest-cov \
    coverage

# Default command for test stage
CMD ["pytest", "tests/mcp/unit/", "-v", "--cov=src/mcp", "--cov-report=xml"]


# ============================================================================
# RUNTIME STAGE: For production MCP server
# ============================================================================
FROM base AS runtime

# Health check (assumes FastMCP or wrapper exposes HTTP on port 3000)
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/health || exit 1

# Run the MCP server
CMD ["python", "-m", "src.mcp.server"]
