FROM python:3.11-slim AS base

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    libpq-dev \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Copy dependency files
COPY pyproject.toml uv.lock ./

# Install dependencies
# --frozen: sync exactly from uv.lock
# --all-groups: install dev dependencies too (needed for tests)
RUN uv sync --frozen --all-groups

# Set environment to use uv's venv
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONPATH=/app

# ============================================================================
# TEST STAGE: For running tests in CI
# ============================================================================
FROM base AS test

# Copy source code
COPY src/ /app/src/
COPY tests/ /app/tests/

# Default command for test stage
CMD ["pytest", "tests/mcp/unit/", "-v", "--cov=src/mcp", "--cov-report=xml"]


# ============================================================================
# RUNTIME STAGE: For production MCP server
# ============================================================================
FROM base AS runtime

# Copy source code
COPY src/ /app/src/

# Health check (assumes FastMCP or wrapper exposes HTTP on port 3000)
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/health || exit 1

# Run the MCP server
CMD ["python", "-m", "src.mcp.server"]
